<CodeSnippets
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Exception block with logging</Title>
      <Shortcut>excep</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CS">
        <![CDATA[try
                {

                }
                catch ( Exception ex )
                {
                    Log.Exception(ex, "$msg");
                }
                ]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>